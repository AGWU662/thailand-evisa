{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  },
  "globals": {
    "localStorage": "readonly",
    "alert": "readonly",
    "confirm": "readonly",
    "prompt": "readonly",
    "fetch": "readonly",
    "FormData": "readonly",
    "smartsupp": "writable",
    "_smartsupp": "writable",
    "require": "readonly",
    "module": "readonly",
    "exports": "readonly",
    "process": "readonly",
    "__dirname": "readonly"
  }
}
